{
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "dependencies": {
    "@expo/vector-icons": "^15.0.3",
    "@nestjs/common": "^11.1.12",
    "@nestjs/core": "^11.1.12",
    "@nestjs/platform-express": "^11.1.12",
    "@react-navigation/bottom-tabs": "^7.10.1",
    "@react-navigation/native": "^7.1.28",
    "@types/argon2": "^0.15.4",
    "@types/redis": "^4.0.11",
    "argon2": "^0.44.0",
    "class-transformer": "^0.5.1",
    "connect-redis": "^9.0.0",
    "expo": "~54.0.32",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "redis": "^5.10.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@clack/prompts": "^1.0.1",
    "@eslint/js": "^10.0.1",
    "@nestjs/mapped-types": "^2.1.0",
    "@types/bun": "^1.3.6",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "bun": "^1.3.6",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.3.0",
    "picocolors": "^1.1.1",
    "prettier": "^3.8.1"
  },
  "scripts": {
    "lint": "eslint '{apps,libs}/**/*.{ts,tsx}' --fix",
    "up": "docker compose up -d",
    "down": "docker compose down",
    "ps": "docker compose ps",
    "up:db": "docker compose up -d db",
    "down:db": "docker compose stop db",
    "it:db": "docker compose exec -it db bash",
    "logs:db": "docker compose logs -f db",
    "up:redis": "docker compose up -d redis",
    "down:redis": "docker compose stop redis",
    "it:redis": "docker compose exec -it redis bash",
    "logs:redis": "docker compose logs -f redis",
    "psql": "docker compose exec -it db bash -c 'psql -U $POSTGRES_USER -d $POSTGRES_DB'",
    "build:backend": "docker compose build backend",
    "up:backend": "docker compose up -d backend",
    "down:backend": "docker compose stop backend",
    "it:backend": "docker compose exec -it backend bash",
    "logs:backend": "docker compose logs -f backend",
    "start:mobile": "bun run --cwd apps/mobile start",
    "build-ts:backend": "bun run --cwd apps/backend build",
    "start:backend": "bun run --cwd apps/backend start:dev",
    "setup:env": "bun run scripts/setup-env.ts",
    "setup": "bun run setup:env && bun install && docker compose up -d db redis && sleep 5 && bun run reseed"
  }
}